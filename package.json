{
  "name": "typescript-cli-boilerplate",
  "version": "1.0.0",
  "description": "TypeScript cli boilerplate",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "dev": "tsx src/cli.ts",
    "test": "jest --coverage",
    "clean": "rimraf dist",
    "lint": "eslint --cache .",
    "lint-staged": "lint-staged",
    "tt": "echo $npm_package_version",
    "build": "tsc --incremental --noEmit --project tsconfig.prod.json",
    "rollup:prod": "rollup --config ./.configs/rollup.config.prod.ts --configPlugin typescript",
    "rollup:dev": "rollup --config ./.configs/rollup.config.dev.ts --configPlugin typescript",
    "pub": "npm publish --registry http://localhost:8901",
    "unpub": "npm unpublish typescript-cli-boilerplate@$npm_package_version --registry http://localhost:8901 --force",
    "pub:prod": "RELEASE_MODE=true npm publish",
    "dd": "deps-diff md -d prod -d dev --title-list-type '*' --deps-list-type '*' --content-list-type '*'",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/imjuni/typescript-cli-boilerplate.git"
  },
  "keywords": [],
  "author": "ByungJoon Lee",
  "license": "MIT",
  "main": "dist/cli.js",
  "types": "dist/cli.d.ts",
  "bin": {
    "nozzle": "dist/cli.js"
  },
  "bugs": {
    "url": "https://github.com/imjuni/typescript-cli-boilerplate/issues"
  },
  "homepage": "https://github.com/imjuni/typescript-cli-boilerplate#readme",
  "devDependencies": {
    "@jest/test-sequencer": "^29.6.4",
    "@rollup/plugin-node-resolve": "^15.2.1",
    "@rollup/plugin-terser": "^0.4.3",
    "@rollup/plugin-typescript": "^11.1.3",
    "@swc/core": "^1.3.82",
    "@swc/jest": "^0.2.29",
    "@tsconfig/node16": "^16.1.1",
    "@types/cli-progress": "^3.11.0",
    "@types/jest": "^29.5.4",
    "@types/node": "^14.18.36",
    "@types/source-map-support": "^0.5.7",
    "@types/yargs": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "cross-env": "^7.0.3",
    "deps-diff": "^1.0.2",
    "eslint": "^8.48.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsdoc": "^46.5.1",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^5.0.0",
    "execa": "^5.1.1",
    "husky": "^8.0.3",
    "jest": "^29.6.4",
    "lint-staged": "^13.2.2",
    "prettier-eslint": "^15.0.1",
    "prettier-plugin-organize-imports": "^3.2.3",
    "read-pkg": "^5.2.0",
    "rimraf": "^5.0.1",
    "rollup": "^3.28.1",
    "rollup-plugin-dts": "^6.0.0",
    "rollup-plugin-swc3": "^0.10.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.5.2",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "cli-progress": "^3.12.0",
    "find-up": "^5.0.0",
    "my-easy-fp": "^0.21.0",
    "ora": "^5.4.1",
    "pino": "^8.15.0",
    "pino-pretty": "^10.2.0",
    "source-map-support": "^0.5.21",
    "yargs": "^17.7.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "cross-env NODE_ENV=production eslint --cache"
    ],
    "*.{js,jsx,ts,tsx},*.json,.{eslintrc.cjs,prettierrc}": [
      "cross-env NODE_ENV=production prettier --ignore-path .eslintignore --parser json --write"
    ]
  }
}
