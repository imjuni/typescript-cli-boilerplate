{
  "name": "typescript-cli-boilerplate",
  "version": "1.0.0",
  "description": "TypeScript cli boilerplate",
  "type": "module",
  "scripts": {
    "clean": "wireit",
    "lint": "wireit",
    "build": "wireit",
    "rollup:prod": "wireit",
    "dd": "wireit",
    "dev": "ts-node src/cli.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/imjuni/typescript-cli-boilerplate.git"
  },
  "keywords": [],
  "author": "ByungJoon Lee",
  "license": "MIT",
  "main": "dist/index.js",
  "imports": {
    "#modules/*": "./src/modules/*"
  },
  "bugs": {
    "url": "https://github.com/imjuni/typescript-cli-boilerplate/issues"
  },
  "homepage": "https://github.com/imjuni/typescript-cli-boilerplate#readme",
  "devDependencies": {
    "@jest/test-sequencer": "^29.3.1",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-terser": "^0.3.0",
    "@tsconfig/node14": "^1.0.3",
    "@types/cli-progress": "^3.11.0",
    "@types/jest": "^29.2.5",
    "@types/node": "^14.18.36",
    "@types/source-map-support": "^0.5.6",
    "@types/yargs": "^17.0.19",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "cross-env": "^7.0.3",
    "deps-diff": "^1.0.1",
    "eslint": "^8.31.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^39.6.4",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^4.2.1",
    "execa": "^6.1.0",
    "jest": "^29.3.1",
    "prettier-eslint": "^15.0.1",
    "prettier-plugin-organize-imports": "^3.2.1",
    "read-pkg": "^7.1.0",
    "rimraf": "^3.0.2",
    "rollup": "^3.9.1",
    "rollup-plugin-ts": "^3.1.1",
    "swc": "^1.0.11",
    "ts-jest": "^29.0.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "wireit": "^0.9.3"
  },
  "dependencies": {
    "chalk": "^5.2.0",
    "pino": "^8.8.0",
    "pino-pretty": "^9.1.1",
    "source-map-support": "^0.5.21",
    "yargs": "^17.6.2"
  },
  "wireit": {
    "clean": {
      "description": "remove dist, artifact directory",
      "command": "rimraf dist/ artifact/"
    },
    "lint": {
      "command": "eslint --cache ."
    },
    "dd": {
      "description": "summary of dependencies upgrade and add, remove",
      "command": "deps-diff md -d dev -d prod -d peer --title-list-type '*' --deps-list-type '*' --content-list-type '*'"
    },
    "build": {
      "command": "tsc --incremental",
      "dependencies": [
        "clean"
      ],
      "env": {
        "NODE_ENV": "production"
      }
    },
    "rollup:prod": {
      "command": "rollup --configPlugin ts -c ./.configs/rollup.config.prod.ts",
      "dependencies": [
        "clean",
        "lint"
      ],
      "env": {
        "NODE_ENV": "production"
      }
    }
  }
}
